{% extends 'base.html.twig' %}

{% block title %}My profile
{% endblock %}

{% block body %}
	<div class="bg-dark vh-100 p-5">
		<div class="container">
			<div class="d-flex bnb-height overflow-hidden">
				<div class="col-sm-12 col-md-4 bg-white rounded m-2 shadow-sm text-center p-3">
					<!-- User card -->
					{# Button for edit (modal) #}
                    <h3>{{ app.user.fullname}}</h3>
                    <p>{{ app.user.email}}</p>
					<p>{{ app.user.age}} yo</p>
                    <div class="position-relative w-50 m-auto">
                    <button class="position-absolute end-0 rounded-pill bg-white shadow border-0" data-bs-toggle="modal" data-bs-target="#accountModal">
                        <i class="bi bi-pencil-square"></i>
                    </button>
				    <img src={{ app.user.image }} alt="{{ app.user.fullname}}" class="img-fluid rounded-pill">
                    </div>
                    {{ include('components/account-modal.html.twig') }}
                </div>

				<div class="col-sm-12 col-md-8 bg-white rounded m-2 bnb-height overflow-scroll">
					{% if app.user.rooms %}
						<table class="table">
							<thead>
								<tr>
									<th scope="col">Title</th>
									<th scope="col">Price</th>
									<th scope="col">Link</th>
								</tr>
							</thead>
							<tbody>
								{% for item in app.user.rooms %}
									<tr>
										<td>{{ item.title }}</td>
										<td>{{ item.price }}â‚¬</td>
										<td><a href="#">See the room</a></td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					{% endif %}
				</div>
				<!-- Host rooms card -->
				<div class="col-sm-12 col-md-4 bg-white"></div><!-- Booked rooms card -->
				<div class="col-sm-12 col-md-8 bg-white"></div><!-- Gamification card -->
            </div>
		</div>
	</div>
{% endblock %}